<div>
  <%= link_to("<< Back to Alien", alien_path(@power.alien)) %>
  <div>
    <h3>Edit Power for <%= @power.alien.name %></h3>
    <%= form_for [@power.alien, @power] do |f| %>
      <table>
        <tr>
          <th>Ability</th>
          <td class="form-edit"><%= f.text_field(:ability) %></td>
        </tr>
      </table>
      <div class="button-save">
        <%= submit_tag("Update Power") %>
      </div>
    <% end %>
  </div>
</div>