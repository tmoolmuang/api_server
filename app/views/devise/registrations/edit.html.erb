<h3>Edit user</h3>
<%= devise_error_messages! %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, size: "30" %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="field">
    <%= f.label :new_password %>
    <% if @minimum_password_length %>
      <em><small>(<%= @minimum_password_length %> characters minimum)</small></em>
    <% end %> <br />
    <i><small>(leave blank if you don't want to change it)</small></i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
  <div class="field">
    <%= f.label :new_password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  <div class="field">
    <%= f.label :api_token %><br />
    <%= f.text_field :api_token, disabled: true, size: "30" %>
  </div>
  <div class="field">
    <%= f.label :current_password %> <i><small>(we need your current password to confirm your changes)</small></i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
